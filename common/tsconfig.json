{
  "ts-node": {
    "transpileOnly": false,
    "files": true,
    "compilerOptions": {
      "resolveJsonModule": true
    }
  },
  "compilerOptions": {
    "module": "CommonJS",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "target": "ESNext",
    "noImplicitAny": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "outDir": "dist",
    "baseUrl": ".",
    "paths": {
      "@locales/*": [
        "./src/locales/*"
      ],
      "@models/*": [
        "./src/models/*"
      ],
      "@models": [
        "./src/models/index.ts"
      ],
      "@common/*": [
        "./src/*"
      ],
    }
  },
  "include": [
    "./**/*",
    "../utils/**/*"
  ]
}
